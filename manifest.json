{
   "author": "Arno van den Brink, Jossef Harus, Jake Howard",
   "background": {
      "persistent": false,
      "scripts": [ "js/background.js" ]
   },
   "browser_action": {
      "default_icon": {
         "19": "img/icon19.png",
         "38": "img/icon38.png"
      },
      "default_title": "Fullscreen Video To Window"
   },
   "content_scripts": [ {
      "all_frames": true,
      "css": [ "css/style.css" ],
      "js": [ "js/content.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_idle"
   } ],
    "icons": {
      "128": "img/icon128.png",
      "16": "img/icon16.png",
      "48": "img/icon48.png"
   },
   "manifest_version": 2,
   "name": "Fullscreen Video to Window",
   "short_name": "Maximizing videos to browser window",
   "description": "Videos will be maximized to the browser window. the difference from fullscreen a video is that it will not block the entire screen.",
   "offline_enabled": true,
   "permissions": [ "http://*/*", "https://*/*" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1"
}
